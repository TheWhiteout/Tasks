public class Task6 {

	public static void main(String[] args) {
	     int initialCost = 10000;
	     double increase = 1.06;
	     double futureCost = initialCost;
	     double totalCost = 0;
	     for(int i = 0; i < 10; i++) {
	    	 futureCost *= increase;
	     }
	      for(int i = 0; i < 4; i++) {
	    	  futureCost *= increase;
	    	  totalCost += futureCost;
	      }
	      // The first year of the tuition is in 11 years.
	      System.out.println("A four year study in 10 years will cost " + (int)(totalCost * 100) / 100.0);
		}

	}
